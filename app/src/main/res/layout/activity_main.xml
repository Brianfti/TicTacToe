            </TableRow>
        </TableLayout>
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#904F75EA"
        android:onClick="Restart"
